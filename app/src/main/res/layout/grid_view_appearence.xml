<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/country_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="India"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="#E64A19"
            android:textStyle="italic|bold"
            android:layout_centerHorizontal="true"
            />


            <ImageView
                android:id="@+id/image_view"
                android:layout_below="@+id/country_name_text_view"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:src="@drawable/in"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"

                />


        <TextView
            android:id="@+id/active_cases_text_view"
            android:layout_below="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Active Cases: 2000"
            android:layout_marginTop="6dp"
            android:textSize="13sp"
            android:textColor="#C70853"
            android:textStyle="bold|italic"
            android:layout_centerHorizontal="true"

            />


        <TextView
            android:id="@+id/total_cases_text_view"
            android:layout_below="@+id/active_cases_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Total Cases: 2000"
            android:layout_marginTop="1dp"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:layout_centerHorizontal="true"

            />




        <TextView
            android:id="@+id/total_deaths_text_view"
            android:layout_below="@+id/total_cases_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Total Deaths: 100"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"

            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>